<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title</title>

	<!-- Styling -->
	<!--Import Google Icon Font-->
	<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
	@Styles.Render("~/Content/Materialize/css/materialize.min.css")
	@Styles.Render("~/Content/Site.css")

	@Scripts.Render("~/bundles/modernizr")
	<!-- Indique au browser que le site est optimisé pour un affichage sur mobile -->
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
</head>
<body>
	<header>
<!-- Menu de navigation -->
		<nav class="light-blue lighten-1" role="navigation">
			<div class="nav-wrapper container">
				<a id="logo-container" href="/" class="brand-logo">SimCity</a>
				<ul class="right hide-on-med-and-down">
					<li><a href="/"><i class="material-icons">home</i></a></li>
					<li><a href="@Url.Action("Index", "User", new { Area = "Account" })"><i class="material-icons">people</i></a></li>
					<li><a href="@Url.Action("Index", "Login", new { Area = "Account"})"><i class="material-icons">power_settings_new</i></a></li>
				</ul>
			</div>
		</nav>
	</header>
<!-- Fin menu de navigation -->
	<main>
		<div class="section no-pad-bot">
			<div class="container">
				@RenderBody()
			</div>
		</div>
	</main>

<!-- Footer -->
	<footer class="page-footer blue darken-2">
		<div class="container">
			<div class="row">
				<div class="col l4">
					<h5 class="white-text">Blog</h5>
					<ul>
						<li><a class="white-text" href="/">Accueil</a></li>
						<li><a class="white-text" href="@Url.Action("Index", "Post", new { Area = "" })">Ajouter un post</a></li>
					</ul>				
				</div>
				<div class="col l4">
					<h5 class="white-text">Administration</h5>
					<ul>
						<li><a class="white-text" href="@Url.Action("Index", "Home", new { Area = "Administration" })">Accueil</a></li>
						<li><a class="white-text" href="@Url.Action("Index", "Access_lvl", new { Area = "Administration" })">Rôles</a></li>
						<li><a class="white-text" href="@Url.Action("Index", "Comments", new { Area = "Administration" })">Commentaires</a></li>
						<li><a class="white-text" href="@Url.Action("Index", "Posts", new { Area = "Administration" })">Billets</a></li>
						<li><a class="white-text" href="@Url.Action("Index", "Users", new { Area = "Administration" })">Utilisateurs</a></li>
					</ul>
				</div>
				<div class="col l4">
					<h5 class="white-text">Utilisateurs</h5>
					<ul>
						<li><a class="white-text" href="@Url.Action("Index", "Login", new { Area = "Account"})">Se connecter</a></li>
						<li><a class="white-text" href="@Url.Action("Disconnect", "Login", new { Area = "Account"})">Se déconnecter</a></li>
						<li><a class="white-text" href="@Url.Action("Registration", "Login", new { Area = "Account"})">S'inscrire</a></li>
						<li><a class="white-text" href="@Url.Action("Index", "User", new { Area = "Account"})">Chercher un utilisateur</a></li>
					</ul>
				</div>
			</div>
		</div>
		<div class="footer-copyright">
			<div class="container">
				&copy; @System.DateTime.Now.Year - <a class="white-text text-lighten-3" href="https://snyssen.be">Nyssen Simon</a> &nbsp; | &nbsp; Design by <a class="white-text text-lighten-3" href="http://materializecss.com">Materialize</a>
			</div>
		</div>
	</footer>

	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")
	@Scripts.Render("~/Scripts/materialize/materialize.min.js")
	@Scripts.Render("~/Scripts/init.js")
	@RenderSection("Scripts", required: false)
</body>
</html>
